@model IEnumerable<BaiBao>
@{
    ViewData["Title"] = "Bài báo";
}

<div class="row" style="margin-bottom:1em;">
    <a asp-action="Create" asp-controller="BaiBao" class="k-button k-primary">Thêm bài báo</a>
</div>

<div class="row">
    @foreach (var baiBao in Model)
    {
        <div class="col-3" style="padding-left:0;">
            <div class="admin-card">
                <h6>POST ID: <b>@baiBao.IdBaiBao</b></h6>
                <img style="max-width:100%;height:148px;border-radius:8px;border:1px solid #bcbcbc;" src="@baiBao.HinhAnh" alt="Hinh Bai Bao" />
                <h5><strong>
                    @(baiBao.TieuDe.Length > 25 ? 
                        new String(baiBao.TieuDe.Take(25).ToArray()).ToUpper() + "..." 
                        : baiBao.TieuDe)
                    </strong>
                </h5>
                <h6>BY <strong style="color:#3f51b5;">@baiBao.UsernameNavigation.HoTen.ToUpper()</strong> AT <strong style="color:#3f51b5;">@baiBao.ThoiGianTao.ToString("dd/MM/yyyy hh:mm")</strong></h6>
                <div data-role="buttongroup" class="k-widget k-button-group" role="group" tabindex="0">
                    <a class="k-button" asp-action="Details" asp-controller="BaiBao" asp-route-id="@baiBao.IdBaiBao" aria-pressed="false" role="button">
                        <span class="k-icon k-i-preview"></span>
                    </a>
                    <a class="k-button" asp-action="Edit" asp-controller="BaiBao" asp-route-id="@baiBao.IdBaiBao" aria-pressed="false" role="button">
                        <span class="k-icon k-i-edit"></span>
                    </a>
                    <a class="k-button" asp-action="Delete" asp-controller="BaiBao" asp-route-id="@baiBao.IdBaiBao" aria-pressed="false" role="button">
                        <span class="k-icon k-i-close"></span>
                    </a>
                    <a class="k-button" href="#" aria-pressed="false" role="button">
                        <span class="k-icon k-i-comments-remove-all"></span>
                    </a>
                </div>
            </div>
        </div>
    }
</div>
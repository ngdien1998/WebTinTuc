@model FooterViewModel

<div class="container">
    <div class="footer__widgets">
        <div class="row">
            <div class="col-lg-3 col-md-6">
                <aside class="widget widget-logo">
                    <a asp-action="Index" asp-controller="Home">
                        <h3 style="color:#FFF;">ĐIỀN - TRÁNG - PHÚC</h3>
                    </a>
                    <p class="copyright">
                        &copy; 2018 Deus | Made by <a href="https://deothemes.com">DeoThemes</a>
                    </p>
                    <div class="socials socials--large socials--rounded mb-24">
                        <a aria-label="facebook" class="social social-facebook" href="#">
                            <i class="ui-facebook"></i>
                        </a>
                        <a aria-label="twitter" class="social social-twitter" href="#">
                            <i class="ui-twitter"></i>
                        </a>
                        <a aria-label="google+" class="social social-google-plus"
                           href="#"><i class="ui-google"></i></a>
                        <a aria-label="youtube" class="social social-youtube" href="#">
                            <i class="ui-youtube"></i>
                        </a>
                        <a aria-label="instagram" class="social social-instagram"
                           href="#"><i class="ui-instagram"></i></a>
                    </div>
                </aside>
            </div>

            <div class="col-lg-2 col-md-6">
                <aside class="widget widget_nav_menu">
                    <h4 class="widget-title">Danh mục quan tâm</h4>
                    <ul>
                        @foreach (var danhMuc in Model.DanhMuc.Take(5))
                        {
                            <li><a href="#">@danhMuc.TenDanhMuc</a></li>
                        }
                    </ul>
                </aside>
            </div>

            <div class="col-lg-4 col-md-6">
                <aside class="widget widget-popular-posts">
                    <h4 class="widget-title">Popular Posts</h4>
                    <ul class="post-list-small">
                        @foreach (var baiBao in Model.BaiBao.Take(2))
                        {
                            <li class="post-list-small__item">
                                <article class="post-list-small__entry clearfix">
                                    <div class="post-list-small__img-holder">
                                        <div class="thumb-container thumb-100">
                                            <a href="single-post.html">
                                                <img alt=""
                                                     class="post-list-small__img--rounded lazyload"
                                                     data-src="@baiBao.HinhAnh"
                                                     src="@baiBao.HinhAnh">
                                            </a>
                                        </div>
                                    </div>
                                    <div class="post-list-small__body">
                                        <h3 class="post-list-small__entry-title">
                                            <a asp-action="Index" asp-controller="Post" asp-route-id="@baiBao.IdBaiBao" asp-route-name="@baiBao.TieuDe.ToUrlFriendly()">
                                                @baiBao.TieuDe
                                            </a>
                                        </h3>
                                        <ul class="entry__meta">
                                            <li class="entry__meta-author">
                                                <span>by</span>
                                                <a href="javascript:void(0)">@baiBao.UsernameNavigation.HoTen</a>
                                            </li>
                                            <li class="entry__meta-date">
                                                @baiBao.ThoiGianTao.ToString("dd/MM/yyyy hh:mm")
                                            </li>
                                        </ul>
                                    </div>
                                </article>
                            </li>
                        }
                    </ul>
                </aside>
            </div>

            <div class="col-lg-3 col-md-6">
                <aside class="widget widget_mc4wp_form_widget">
                    <h4 class="widget-title">Newsletter</h4>
                    <p class="newsletter__text">
                        <i class="ui-email newsletter__icon"></i>
                        Đăng ký nhận tin tức hằng ngày
                    </p>
                    <form class="mc4wp-form" method="post">
                        <div class="mc4wp-form-fields">
                            <div class="form-group">
                                <input name="EMAIL" placeholder="Email của bạn" required="" type="email">
                            </div>
                            <div class="form-group">
                                <input class="btn btn-lg btn-color" type="submit" value="Đăng ký">
                            </div>
                        </div>
                    </form>
                </aside>
            </div>
        </div>
    </div>
</div>
<!-- end container -->
@model List<BaiBao>

<span class="trending-now__label">
    <i class="ui-flash"></i>
    <span class="trending-now__text d-lg-inline-block d-none">Tin mới nhất</span>
</span>

<div class="newsticker">
    <ul class="newsticker__list">
        @foreach (var baiBao in Model)
        {
            <li class="newsticker__item">
                <a class="newsticker__item-url" asp-action="Index" asp-controller="Post" asp-route-id="@baiBao.IdBaiBao" asp-route-name="@baiBao.TieuDe">@baiBao.TieuDe</a>
            </li>
        }
    </ul>
</div>

<div class="newsticker-buttons">
    <button aria-label="next article" class="newsticker-button newsticker-button--prev" id="newsticker-button--prev">
        <i class="ui-arrow-left"></i>
    </button>
    <button aria-label="previous article" class="newsticker-button newsticker-button--next" id="newsticker-button--next">
        <i class="ui-arrow-right"></i>
    </button>
</div>
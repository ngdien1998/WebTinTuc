@model DanhMuc
@{ 
    var baiBao = Model.BaiBao.ToArray();
}

<div class="col-md-6">
    <div class="title-wrap title-wrap--line">
        <h3 class="section-title">@Model.TenDanhMuc</h3>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <article class="entry thumb thumb--size-2">
                <div class="entry__img-holder thumb__img-holder"
                     style="background-image: url('@baiBao[0].HinhAnh');">
                    <div class="bottom-gradient"></div>
                    <div class="thumb-text-holder thumb-text-holder--1">
                        <h2 class="thumb-entry-title">
                            <a asp-action="Index" asp-controller="Post" asp-route-id="@baiBao[0].IdBaiBao" asp-route-name="@baiBao[0].TieuDe.ToUrlFriendly()">
                                @baiBao[0].TieuDe
                            </a>
                        </h2>
                        <ul class="entry__meta">
                            <li class="entry__meta-author">
                                <span>by</span>
                                <a href="#">@baiBao[0].UsernameNavigation.HoTen</a>
                            </li>
                            <li class="entry__meta-date">
                                @baiBao[0].ThoiGianTao.ToString("dd/MM/yyyy hh:mm")
                            </li>
                        </ul>
                    </div>
                    <a class="thumb-url" asp-action="Index" asp-controller="Post" asp-route-id="@baiBao[0].IdBaiBao" asp-route-name="@baiBao[0].TieuDe.ToUrlFriendly()"></a>
                </div>
            </article>
        </div>
        <div class="col-lg-6">
            <ul class="post-list-small post-list-small--dividers post-list-small--arrows mb-24">
                @for (int i = 1; i < 5; i++)
                {
                    <li class="post-list-small__item">
                        <article class="post-list-small__entry">
                            <div class="post-list-small__body">
                                <h3 class="post-list-small__entry-title">
                                    <a asp-action="Index" asp-controller="Post" asp-route-id="@baiBao[i].IdBaiBao" asp-route-name="@baiBao[i].TieuDe.ToUrlFriendly()">@baiBao[i].TieuDe</a>
                                </h3>
                            </div>
                        </article>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
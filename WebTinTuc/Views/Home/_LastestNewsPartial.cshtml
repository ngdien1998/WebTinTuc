@model List<DanhMuc>

<div class="title-wrap title-wrap--line">
    <h3 class="section-title">Latest News</h3>

    <div class="tabs tab-post__tabs">
        <ul class="tabs__list">
            @foreach (var danhMuc in Model)
            {
                <li class="tabs__item tabs__item--active">
                    <a class="tabs__trigger" href="#@(danhMuc.IdDanhMuc + "_" + danhMuc.TenDanhMuc)">@danhMuc.TenDanhMuc</a>
                </li>
            }
        </ul>
        <!-- end tabs -->
    </div>
</div>

<!-- tab content -->
<div class="tabs__content tabs__content-trigger tab-post__tabs-content">
    @foreach (var danhMuc in Model)
    {
        <div class="tabs__content-pane" id="@(danhMuc.IdDanhMuc + "_" + danhMuc.TenDanhMuc)">
            <div class="row card-row">
                @for (int i = 0; i < 4; i++)
                {
                    @{
                        var baiBao = danhMuc.BaiBao.ToArray();
                    }
                    <div class="col-md-6">
                        <article class="entry card">
                            <div class="entry__img-holder card__img-holder">
                                <a href="single-post.html">
                                    <div class="thumb-container thumb-70">
                                        <img alt="" class="entry__img lazyload" data-src="@baiBao[i].HinhAnh" src="@baiBao[i].HinhAnh" />
                                    </div>
                                </a>
                                <a class="entry__meta-category entry__meta-category--label entry__meta-category--align-in-corner entry__meta-category--orange" href="#">@danhMuc.TenDanhMuc</a>
                            </div>

                            <div class="entry__body card__body">
                                <div class="entry__header">
                                    <h2 class="entry__title">
                                        <a asp-action="Index" asp-controller="Post" asp-route-id="@baiBao[i].IdBaiBao" asp-route-name="@baiBao[i].TieuDe">@baiBao[i].TieuDe</a>
                                    </h2>
                                    <ul class="entry__meta">
                                        <li class="entry__meta-author">
                                            <span>by</span>
                                            <a href="#">@baiBao[i].UsernameNavigation.HoTen</a>
                                        </li>
                                        <li class="entry__meta-date">
                                            @baiBao[i].ThoiGianTao.ToString("dd/MM/yyyy hh:mm")
                                        </li>
                                    </ul>
                                </div>
                                <div class="entry__excerpt">
                                    <p>
                                        @(new string(baiBao[i].TomTat.Take(70).ToArray()) + " ...")
                                    </p>
                                </div>
                            </div>
                        </article>
                    </div>
                }
            </div>
        </div>
    }
</div>
<!-- end tab content -->